import BaseLayout from "$layouts/BaseLayout.astro";
import HeroImgPC from "$images/products/pc/product-pc5.png";
import HeroImgSP from "$images/products/sp/img-2.png";


import Prd1 from "$images/Miranest-powder-1.png";
import Prd2 from "$images/Miranest-powder-2.png";
import Prd3 from "$images/Miranest-powder-3.png";

import Img4 from "$images/products/pc/product-pc4.png";
import Img2 from "$images/products/pc/product-pc2.png";
import Img8 from "$images/products/pc/product-pc8.png";
import Img1 from "$images/products/pc/product-pc1.png";
import Img3 from "$images/products/pc/product-pc3.png";
import Img12 from "$images/products/pc/product-pc12.png";
import Img9 from "$images/products/pc/product-pc9.png";
import Img1sp from "$images/products/sp/img-1.png";




---
<style lang="scss">
        .second-header {
            display: inline-block;
            left: 32%;
            width: 30%;
            top: 50%;
            text-align: left;
            letter-spacing: 0.1rem;
        }
          .grid-1 {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-column-gap: 1rem;
            grid-row-gap: 2rem;
            img:nth-child(1){
                max-height:360px;
                grid-area: 1 / 1 / 2 / 3;
            };
            img:nth-child(2){
                max-height:180px;
                grid-area: 2 / 1 / 3 / 2;
            };
            img:nth-child(3){
                max-height:180px;
                grid-area: 2 / 2 / 3 / 3;
            }
        }


        .Q::before{
            content:"Q";
            padding-right: 1rem;
        }
        .A::before{
            content:"A";
            padding-right: 1rem;
        }

</style>
<BaseLayout>

    <section class="relative">
            <div class="absolute top-0 px-3 md:px-32 pt-5 flex w-full h-full flex md:items-center">
            <h1 class="text-md md:text-4xl w-1/2 md:w-[27%] md:leading-[70px] text-left">ミラネストはマレーシアのジャングルが生んだ奇跡のペット用栄養補助食品です</h1>
            </div>
             <picture>
                <source srcset={HeroImgSP} type="image/png" media="(max-width:480px)" />
                <img src={HeroImgPC} class="w-full"/>
            </picture>
    </section>


    <section class="mt-10 md:mt-32 px-3 md:px-52">
        <h2 class="text-h2 md:text-4xl text-main-light-green text-center mb-7 px-3 md:px-auto">商品詳細</h2>
        <div class="grid md:grid-cols-1 gap-20">
        <div class="flex items-center flex-col md:flex-row gap-20">
            <div class="grid-1 justify-items-center w-full md:w-1/2">
                        <img src={Prd2} >
                        <img src={Prd2} >
                        <img src={Prd3} >
            </div>

            <div class="md:p-5  w-full md:w-1/2">
                        <div class="product-title mb-5">
                        <h2 class="text-3xl">ミラネストパウダー（犬用）100g</h2>
                        <p class="text-base">犬用栄養補助食（パウダータイプ）</p>
                        </div>
                        <div class="product-description mb-5">
                        <p  class="text-base">天然アナツバメの巣エキスなどの配合成分が、細胞レベルで病状の緩和や免疫力の強化へと導きます。『ミラネスト』はペット用サプリメントゼリーであり、原材料のツバメの巣は、『美巣』を使用しています。</p>
                        </div>
                        <div class="product-share flex justify-end my-5">
                        <img src={Img8} >
                        </div>
                          <p class="price mb-3">定期購入 ￥8,910（税込）<span class="text-[#FF0000]">10％OFF　送料無料</span></p>
                         <div class="flex justify-center  ">
                            <a href="" class="px-3 py-3 w-10/12 text-center text-white bg-main-light-green rounded-0 ">定期購入する</a>
                        </div>
                        <p class="price  mb-3 mt-5">通常購入 ￥9,900（税込）</p>
                         <div class="flex justify-center  ">
                            <a href="" class="px-3 py-3 w-10/12 text-center text-white bg-main-green rounded-0 ">通常購入する</a>
                        </div>
            </div>
        </div>
        </div>
    </section>

    <section class="mt-10 md:mt-32 md:px-32">
        <h2 class="text-h2 md:text-4xl text-main-light-green text-center mb-7 px-3 md:px-auto">モニターキャンペーン（期間限定）</h2>
                <p class="text-base md:text-3xl  text-center ">まずはお試しになりたい方へ。</p>
    </section>



  <section class="mt-10 md:mt-32 px-3 md:px-52">
    <div class="grid md:grid-cols-1 gap-20">
         <div class="hidden md:flex items-center flex-col md:flex-row gap-20">
            <div class="grid-1 justify-items-center w-full md:w-1/2">
                        <img src={Prd1} >
            </div>

            <div class="md:p-5  w-full md:w-1/2">
                        <div class="product-title mb-5">
                        <h2 class="text-3xl">ミラネストパウダー（犬用）25g</h2>
                        </div>
                        <div class="product-description mb-5">
                        <p  class="text-base">お申し込みいただいた皆様へミラネストパウダーミニサイズ（25g）をプレゼント新商品のモニターとしてミラネストをお試しになられた体験談やお写真をぜひお寄せください。<br>※1家族1点限り</p>
                        </div>
                        <div class="product-share flex justify-end my-5">
                        <img src={Img8} >
                        </div>
                         <div class="flex justify-center  ">
                            <a href="" class="px-3 py-3 w-10/12 text-center text-white bg-main-light-green rounded-0 ">お試し購入</a>
                        </div>
            </div>
        </div>
        </div>
    </section>

     <section class="mt-10 md:mt-32 px-3 md:px-52">


             <h2 class="text-h2 md:text-4xl text-main-light-green text-center mb-7  px-3 md:px-auto">商品特徴・内容量</h2>
        <div class="grid grid-cols-1 gap-20 mt-10 md:mt-32">
            <div>
            <h3 class="text-main-gold-3 border-b border-main-gold-2 text-h2 mb-5">商品特徴</h3>
            <p>”奇跡を起こす”天然アナツバメの巣をそのままパウダーに。</p>
            <p>そして、こだわりの国産原料を長期熟成させた植物発酵エキスは腸内環境を整えます。さらに肌毛を整え、つくりだすエネルギーになる</p>
            <p>大切な愛犬にも安心して与えられる本物の栄養補助食品へ。</p>
            <p>人間と同じようにより良い食事から健康を支えられるよう香料、着色料、保存料は不使用に。また、味は何度も改良を重ね、食べ続けやすいチキン風味に仕上げました。細かなパウダーで食事や水にも溶けやすい商品が完成しました。</p>
            </div>

            <div>
            <h3 class="text-main-gold-3 border-b border-main-gold-2 text-h2 mb-5">内容量</h3>
            <p>100g（小型スプーン付）</p>
            </div>

             <div>
            <h3 class="text-main-gold-3 border-b border-main-gold-2 text-h2 mb-5">原材料名・栄養成分表示</h3>
            <p>原材料名：米粉、乾燥ビール酵母、デキストリン、チキンエキス末、ツバメの巣粉末、植物発酵エキス末、コエンザイムQ10、ビオチン</p>
            <p>賞味期限：2年</p>
            </div>

            <div>
            <h3 class="text-main-gold-3 border-b border-main-gold-2 text-h2 mb-5">与え方</h3>
            <p>1日に与える量を1回または複数回に分けて与えてください。普段の食事にふりかけて与えてください。</p>
            <p>・付属の小型スプーンをご利用ください</p>
            <p>小型犬（5kg未満）  ：スプーン1杯（約2g）<br>中型犬（5～15kg）  ：スプーン2杯（約4g）<br>大型犬（15kg以上）：スプーン3杯（約6g）</p>
             <img src={Img12} alt="" class="mt-5"/>
            </div>

               <div>
            <h3 class="text-main-gold-3 border-b border-main-gold-2 text-h2 mb-5">注意事項</h3>
            <ul class="list-disc text-base">
            <li>袋の開封は中身が飛び散らないようにゆっくり行ってください。</li>
            <li>自然素材のため、若干の味・色調等にばらつきがある場合がございますが、品質に問題はありません。</li>
            <li>体調や体質に合わない場合はお控えください。</li>
             <li>原材料をご確認の上、食物アレルギーがある場合はお控えください。</li>
             <li>薬を服用中あるいは通院中は獣医師に相談の上、与えてください。</li>
             <li>生後3ヶ月未満でのご使用はお控えください。</li>
             <li>ペットおよび乳幼児の手の届かないところに保管してください。</li>
             </ul>
            </div>
        </div>
     </section>

     <section class="mt-10 md:mt-32 px-3 md:px-52">

             <h2 class="text-h2 md:text-4xl text-main-light-green text-center mb-7  md:px-auto">Q&A</h2>
            <div class="mt-10 md:mt-32">
             <div @click.away="open = false" class="relative" x-data="{ open: false }">
                <button @click="open = !open" class="flex flex-row justify-between items-center w-full px-4 py-4 mt-2 text-base text-left bg-golden text-white w-full focus:outline-none focus:shadow-outline">
                <span class="Q">保存料・着色料などは入っていますか？</span>
                <svg fill="currentColor" viewBox="0 0 20 20" :class="{'rotate-180': open, 'rotate-0': !open}" class="inline w-4 h-4 mt-1 ml-1 transition-transform duration-200 transform md:-mt-1"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                </button>
                <div x-show="open" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" class=" right-0 w-full mt-2 origin-top-right rounded-md">
