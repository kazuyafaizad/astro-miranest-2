	height: 100%;
}
.grid-07 {
	grid-template-columns: repeat(3, .25fr);
	grid-template-rows: repeat(3, 1fr);
	grid-column-gap: 3rem;
	grid-row-gap: 0px;
}
a {

.right {
	display: inline-block;
	width: 4em;
	height: 4em;
	border: 0.5em solid #ff7924;
	border-radius: 50%;
	margin-left: 1.5em;
	background-color: #ff7924;
	&:after {
		content: "";
		display: inline-block;
		margin-top: 26%;
		margin-left: 20%;
		width: 1.4em;
		height: 1.4em;
		border-top: 0.5em solid white;
		border-right: 0.5em solid white;
		-moz-transform: rotate(45deg);
		-webkit-transform: rotate(45deg);
		transform: rotate(45deg);
	}
}
}

.scrolling-img {
	margin-bottom: 2%;
	overflow: auto;
	width: 100%;
	margin-left: auto;
	margin-right: auto;
	padding: 0;
	img {
		width: 100%;
	}
}
.swiper {
  width: 100%;
  height: 300px;
}
.swiper-button-next, .swiper-button-prev{
    color:#333333;
}
@media only screen and (max-width: 992px) {
    .scrolling-img {
		overflow: scroll;
		img {
            height:300px;
			width: 500px;
		}
		&::-webkit-scrollbar-thumb {
			background-color: #1F3939;
		}
		&::-webkit-scrollbar {
			width: 1em;
		}
	}
