import BaseLayout from "$layouts/BaseLayout.astro";
import HeroImgPC from "$images/miranest-powder-7.jpg";
import HeroImgSP from "$images/products/sp/img-2.png";


import Prd1 from "$images/Miranest-powder-1.png";
import Prd2 from "$images/Miranest-powder-2.png";
import Prd3 from "$images/Miranest-powder-3.png";

import Img4 from "$images/products/pc/product-pc4.png";
import Img2 from "$images/products/pc/product-pc2.png";
import Img8 from "$images/products/pc/product-pc8.png";
import Img1 from "$images/products/pc/product-pc1.png";
import Img3 from "$images/products/pc/product-pc3.png";
import Img12 from "$images/products/pc/product-pc12.png";
import Img9 from "$images/products/pc/product-pc9.png";
