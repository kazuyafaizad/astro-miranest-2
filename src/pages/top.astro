<style lang="scss">

.grid-01 {
	grid-template-columns: repeat(6, 1fr);
    width:80%;
	padding: 5%;
	align-items: center;
	img,video {
		&:nth-child(1) {
			grid-column: 1/4;
			grid-row: 1;
			z-index: 1;
		}
		&:nth-child(2) {
			grid-column: 3/8;
			grid-row: 1;
		}
	}
}

.grid-02 {
	grid-auto-flow: row;
	grid-template-columns: 1fr 2fr 1fr;
	grid-template-areas: "a b ." "a c .";
	align-items: center;
	justify-items: center;
}
.grid-03 {
	grid-template-columns:repeat(5, 1fr);
    width:80%;
	padding: 5%;
	align-items: center;
	img {
		&:nth-child(1) {
			grid-column: 1/5;
			grid-row: 1;
		}
		&:nth-child(2) {
			grid-column: 4/7;
			grid-row: 1;
			z-index: 1;
		}
	}
}

.grid-04 {
	grid-template-columns: 1fr 2fr 1fr;
	grid-template-areas: ". b a" ". c a";
	align-items: center;
	justify-items: center;
}
.grid-06{
    grid-template-columns: 1fr 2fr 1fr;
	grid-template-rows: 1fr;
