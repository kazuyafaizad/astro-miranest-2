---
import LogoText from '../images/logo.png';
import { Icon } from 'astro-icon';

---

  <style>
    .ig{
      background: #f09433;
      background: -moz-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
      background: -webkit-linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
      background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
      filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f09433', endColorstr='#bc1888',GradientType=1 );
    }
  </style>

<nav class="hidden xl:flex relative h-[82px] sticky top-0 z-10">
 <div class="bg-main-brown flex items-center justify-center shadow py-2 px-10 w-full" >
 <a href="https://www.miranest.jp"><img src={LogoText} class="h-full max-h-14 w-[280px] block" alt="logo miranest"/ width="269" height="54"></a>
        <ul class="flex justify-left w-10/12 pl-10 max-h-[1.3rem] h-full">
          <li class="flex hover:border-b hover:border-golden hover:text-golden"><a href="/top" class="text-white px-5 text-[14px] ">MIRANEST TOP</a></li>
            <li class="flex hover:border-b hover:border-golden hover:text-golden"><a href="/about" class="text-white px-5 text-[14px] ">ミラネストについて</a></li>
            <li class="flex hover:border-b hover:border-golden hover:text-golden"><a href="/products/powder" class="text-white px-5 text-[14px] ">商品購入</a></li>
            <li class="flex hover:border-b hover:border-golden hover:text-golden"><a href="https://cart.bi-su.jp/miranest_usage_guide.html" class="text-white px-5 text-[14px] ">ご案内</a></li>
        </ul>
        <ul class="flex w-1/12 hidden">
            <li class="flex"><a href="https://www.facebook.com/miranest.jp/?modal=admin_todo_tour"><Icon name="fb-ico"  class="h-7 mx-2" alt="facebook"/></a></li>
            <li class="flex"><a href="https://www.instagram.com/miranest_official/"><Icon name="ig-ico" class="h-7" alt="instagram"/></a></li>
        </ul>
        </div>
</nav>



<div x-data="{ open: false }" class="xl:hidden sticky top-0 z-10 flex flex-col w-full  max-w-screen-xl bg-main-brown ">
    <div class="px-3 flex flex-row items-center justify-between h-full min-h-[40px] h-[16vw] ">
     <a href="/top" class="w-full">
          <img class="block w-auto h-12 mr-2" src={LogoText} alt="Logo bi-su" width="240" height="48" />
        </a>

      <div class="flex flex-col text-[3vw] p-[5px] w-[40px] " @click="open = !open">
       <div class="flex items-center justify-center relative h-[34px]" >
          <span x-bind:class="open ? 'translate-y-0 rotate-45 duration-300 ease-in-out ' : '-translate-y-2'"
                class="transform transition w-full h-px bg-white absolute"></span>

          <span x-bind:class="open ? 'opacity-0 translate-x-3 duration-300 ease-in-out ' : 'opacity-100'"
                class="transform transition w-full h-px bg-white absolute"></span>

          <span x-bind:class="open ? 'translate-y-0 -rotate-45 duration-300 ease-in-out ' : 'translate-y-2'"
                class="transform transition w-full h-px bg-white absolute"></span>
      </div>
      <span
          class="text-white text-[0.8em]">MENU</span>
      </div>
    </div>

    <nav :class="{'opacity-0 ': !open,'opacity-95 ': open}" class="overflow-hidden flex  duration-300 flex-col flex-grow px-3 bg-[#2e2d2d] text-white absolute w-full top-[16vw] h-screen opacity-0 py-[10%] px-[15%]">
      <a class="border-b border-dashed border-white px-4 py-4 mt-2 text-sm font-semibold bg-transparent lg:mt-0 lg:ml-4 hover:text-gray-900 focus:outline-none focus:shadow-outline flex justify-between" href="/about">ミラネストについて <Icon name="akar-icons:chevron-right" class="w-5" /></a>
      <a class="border-b border-dashed border-white px-4 py-4 mt-2 text-sm font-semibold bg-transparent lg:mt-0 lg:ml-4 hover:text-gray-900 focus:outline-none focus:shadow-outline flex justify-between" href="/products/powder">商品購入 <Icon name="akar-icons:chevron-right" class="w-5" /></a>
      <a class="border-b border-dashed border-white px-4 py-4 mt-2 text-sm font-semibold bg-transparent lg:mt-0 lg:ml-4 hover:text-gray-900 focus:outline-none focus:shadow-outline flex justify-between" href="https://cart.bi-su.jp/miranest_usage_guide.html">ご案内 <Icon name="akar-icons:chevron-right" class="w-5" /></a>
     <div class="flex mt-12 justify-evenly hidden">
            <a href="https://www.facebook.com/miranest.jp/?modal=admin_todo_tour"><Icon name="fb-ico"  class="h-12" alt="facebook"/></a>
            <a href="https://www.instagram.com/miranest_official/" class=""><Icon name="ig-ico" class="ig h-12 rounded-full" alt="instagram"/></a>
        </div>
    </nav>

</div>

