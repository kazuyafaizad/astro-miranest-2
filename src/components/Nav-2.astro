---
import LogoText from '../images/logo.png';
import { Icon } from 'astro-icon';

---

  <style>
    .ig{
      background: #f09433;
      background: -moz-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
      background: -webkit-linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
      background: linear-gradient(45deg, #f09433 0%,#e6683c 25%,#dc2743 50%,#cc2366 75%,#bc1888 100%);
      filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f09433', endColorstr='#bc1888',GradientType=1 );
    }
  </style>

<nav class="hidden xl:flex relative h-16 sticky top-0 z-10">
 <div class="bg-main-brown flex items-center justify-center shadow py-2 px-32 w-full" >
 <a href="/top"><img src={LogoText} class="h-full max-h-14" alt="logo miranest"/ width="269" height="54"></a>
        <ul class="flex justify-left w-10/12 pl-12">
            <li class="flex"><a href="/about" class="text-white px-5 text-base hover:border-b hover:border-golden hover:text-golden">ミラネストについて</a></li>
            <li class="flex"><a href="/products/powder" class="text-white px-5 text-base hover:border-b hover:border-golden hover:text-golden">商品購入</a></li>
            <li class="flex"><a href="/guide/user" class="text-white px-5 text-base hover:border-b hover:border-golden hover:text-golden">ご案内</a></li>
        </ul>
        <ul class="flex w-1/12">
            <li class="flex"><a href="https://www.facebook.com/miranest.jp/?modal=admin_todo_tour"><Icon name="fb-ico"  class="h-7 mx-2" alt="facebook"/></a></li>
            <li class="flex"><a href="https://www.instagram.com/miranest_official/"><Icon name="ig-ico" class="h-7" alt="instagram"/></a></li>
        </ul>
        </div>
</nav>



<div class="xl:hidden w-full text-gray-700 bg-main-brown sticky top-0 z-10">
  <div x-data="{ open: false }" class="flex flex-col max-w-screen-xl mx-auto xl:items-center">
    <div class="px-4 flex flex-row items-center justify-between">
     <a href="/top" class="flex items-center justify-center px-2 w-full">
          <img class="block h-12 w-auto mr-2" src={LogoText} alt="Logo bi-su" width="240" height="48" />
        </a>

      <div class="xl:hidden rounded-lg focus:outline-none focus:shadow-outline" @click="open = !open">
       <div class="w-7 flex items-center justify-center relative">
      <span x-bind:class="open ? 'translate-y-0 rotate-45' : '-translate-y-2'"
            class="transform transition w-full h-px bg-white absolute"></span>

      <span x-bind:class="open ? 'opacity-0 translate-x-3' : 'opacity-100'"
            class="transform transition w-full h-px bg-white absolute"></span>

      <span x-bind:class="open ? 'translate-y-0 -rotate-45' : 'translate-y-2'"
            class="transform transition w-full h-px bg-white absolute"></span>
    </div>
      </div>
    </div>

    <nav :class="{'h-0': !open,'h-screen': open}" class="overflow-hidden flex  duration-700 flex-col flex-grow px-3 bg-white absolute w-full top-12 h-0">
      <a class="border-b border-dotted border-black px-4 py-4 mt-2 text-sm font-semibold bg-transparent lg:mt-0 lg:ml-4 hover:text-gray-900 focus:outline-none focus:shadow-outline" href="/about">ミラネストについて</a>
      <a class="border-b border-dotted border-black px-4 py-4 mt-2 text-sm font-semibold bg-transparent lg:mt-0 lg:ml-4 hover:text-gray-900 focus:outline-none focus:shadow-outline" href="/products/powder">商品購入</a>
      <a class="border-b border-dotted border-black px-4 py-4 mt-2 text-sm font-semibold bg-transparent lg:mt-0 lg:ml-4 hover:text-gray-900 focus:outline-none focus:shadow-outline" href="/guide/user">ご案内</a>
       <div class="flex mt-12 justify-evenly">
            <a href="https://www.facebook.com/miranest.jp/?modal=admin_todo_tour"><Icon name="fb-ico"  class="h-12" alt="facebook"/></a>
            <a href="https://www.instagram.com/miranest_official/" class=""><Icon name="ig-ico" class="ig h-12 rounded-full" alt="instagram"/></a>
        </div>
    </nav>

  </div>
</div>

